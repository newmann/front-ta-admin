#Build Base
FROM node:8-alpine as builder

LABEL authors="Newemann <newmannhu@qq.com>"


RUN npm set progress=false && npm config set depth 0 && npm cache clean --force

RUN npm config set registry http://registry.cnpmjs.org

RUN mkdir /noderepo

RUN npm config set prefix '/noderepo'

RUN chown -R $(whoami) $(npm config get prefix)/{lib/node_modules,bin,share}

RUN npm i -g electron

RUN npm i -g node-sass


